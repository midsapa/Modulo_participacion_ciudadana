<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/grad1"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            android:id="@+id/ivListObraComent">
        </ImageView>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtListNombreUsuarioComent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:text="Nombre de Usuario"
                android:textColor="#fff"
                android:textSize="15dp"
                android:fontFamily="@font/adobe_myungjo_std_m"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/txtListfechacoment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="24/10/2020"
                android:textColor="#fff"
                android:fontFamily="@font/adobe_myungjo_std_m"
                android:textSize="15dp"
                android:textStyle="bold"></TextView>


            <TextView
                android:id="@+id/txtListcomentarioUsuarioComent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Comentario"
                android:textColor="#fff"
                android:textSize="15dp"
                android:fontFamily="@font/adobe_myungjo_std_m"
                android:textStyle="bold"></TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtListPuntajeComent1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Puntaje:  "
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:fontFamily="@font/adobe_myungjo_std_m"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/txtListPuntajeComent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Puntaje"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:fontFamily="@font/adobe_myungjo_std_m"
                    android:textStyle="bold">

                </TextView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</ScrollView>
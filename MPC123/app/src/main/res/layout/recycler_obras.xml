<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/grad2"
    android:padding="25dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/ivListObra">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de la Obra"
            android:layout_gravity="left"
            android:id="@+id/txtListNombre"
            android:textStyle="bold"
            android:textColor="#fff"
            android:fontFamily="@font/adobe_myungjo_std_m"
            android:textSize="20dp">
        </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción: "
            android:layout_gravity="left"
            android:textStyle="normal"
            android:id="@+id/txtListDescription2"
            android:textColor="#fff"
            android:fontFamily="@font/adobe_myungjo_std_m"
            android:textSize="15dp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:layout_gravity="left"
            android:textStyle="normal"
            android:id="@+id/txtListDescription"
            android:textColor="#fff"
            android:fontFamily="@font/adobe_myungjo_std_m"
            android:textSize="15dp">
        </TextView>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha Inicio: "
                android:layout_gravity="left"
                android:fontFamily="@font/adobe_myungjo_std_m"
                android:gravity="left"
                android:textStyle="italic"
                android:id="@+id/txtListFechaInicio2"
                android:textColor="#fff"
                android:textSize="15dp"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha Inicio "
                android:layout_gravity="left"
                android:layout_weight="1"
                android:gravity="left"
                android:textStyle="italic"
                android:id="@+id/txtListFechaInicio"
                android:textColor="#fff"
                android:fontFamily="@font/adobe_myungjo_std_m"
                android:textSize="15dp">
            </TextView>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha Fin: "
                android:textStyle="italic"
                android:id="@+id/txtListFechaFin2"
                android:textColor="#fff"
                android:fontFamily="@font/adobe_myungjo_std_m"
                android:textSize="15dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha Fin"
                android:textStyle="italic"
                android:id="@+id/txtListFechaFin"
                android:textColor="#fff"
                android:fontFamily="@font/adobe_myungjo_std_m"
                android:textSize="15dp">
            </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cronograma: "
            android:layout_gravity="left"
            android:id="@+id/txtListCronograma2"
            android:textColor="#fff"
            android:fontFamily="@font/adobe_myungjo_std_m"
            android:textSize="15dp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cronograma"
            android:layout_gravity="left"
            android:id="@+id/txtListCronograma"
            android:textColor="#fff"
            android:fontFamily="@font/adobe_myungjo_std_m"
            android:textSize="15dp">
        </TextView>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de Obra: "
                android:id="@+id/txtListTipo2"
                android:textColor="#fff"
                android:fontFamily="@font/adobe_myungjo_std_m"
                android:textSize="15dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de Obra"
                android:id="@+id/txtListTipo"
                android:layout_weight="1"
                android:textColor="#fff"
                android:fontFamily="@font/adobe_myungjo_std_m"
                android:textSize="15dp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtListMonto2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monto: S/"
                android:textColor="#fff"
                android:fontFamily="@font/adobe_myungjo_std_m"
                android:textSize="15dp"></TextView>
            <TextView
                android:id="@+id/txtListMonto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monto"
                android:layout_weight="1"
                android:textColor="#fff"
                android:fontFamily="@font/adobe_myungjo_std_m"
                android:textSize="15dp"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtListPromedioObra1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Promedio:  "
                android:layout_weight="1"
                android:textColor="#fff"
                android:textSize="15dp"
                android:fontFamily="@font/adobe_myungjo_std_m"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/txtListPromedioObra2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Promedio"
                android:textColor="#fff"
                android:layout_weight="1"
                android:textSize="15dp"
                android:fontFamily="@font/adobe_myungjo_std_m"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>



        <Button
            android:id="@+id/btnListVerMas"
            android:layout_width="wrap_content"
            android:gravity="right"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_height="20dp"
            android:textColor="#218C29"
            android:background="#88DEF6"
            android:text="Observación" />

        <Button
            android:id="@+id/btnListcomentarios"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:layout_gravity="right"
            android:layout_height="20dp"
            android:background="#95E4FA"
            android:textColor="#218C29"
            android:text="Ver comentarios" />

    </LinearLayout>

</ScrollView>